<Window x:Class="A_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:hy="clr-namespace:A_1"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Label>视频源：</Label>
            <RadioButton VerticalAlignment="Center" Tag="video1" Click="change_video" IsChecked="True">视频源1</RadioButton>
            <RadioButton VerticalAlignment="Center" Tag="video2" Click="change_video">视频源2</RadioButton>
        </StackPanel>
        <hy:MyInkCanvas Grid.Row="1"></hy:MyInkCanvas>
    </Grid>
</Window>
