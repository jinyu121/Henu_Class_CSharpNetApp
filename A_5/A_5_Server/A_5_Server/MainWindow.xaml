<Window x:Class="A_5_Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TCP聊天 服务端" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="infoShow" Grid.ColumnSpan="2" Grid.Row="0"/>
        <Button x:Name="btnStart" Grid.Row="1" Grid.Column="0" Click="btnStart_Click">开始监听</Button>
        <Button x:Name="btnStop" Grid.Row="1" Grid.Column="1" Click="btnStop_Click">停止监听</Button>
    </Grid>
</Window>
